# Jenkins Configuration Template - jenkins.ketjubung.com
# Copy file ini jadi jenkins.conf dan sesuaikan dengan environment

# HTTP Server
server {
    listen 80;
    server_name jenkins.yourdomain.com;  # UPDATE DOMAIN

    # Logging
    access_log /var/log/nginx/jenkins.access.log;
    error_log /var/log/nginx/jenkins.error.log;

    # Client body size
    client_max_body_size 100M;

    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml;

    # Jenkins Application (root path - no prefix)
    location / {
        # Proxy ke Jenkins container (same network)
        proxy_pass http://jenkins:8080;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 150;
        proxy_send_timeout 300;
        proxy_read_timeout 300;
        
        proxy_buffering off;
        proxy_request_buffering off;
    }
}

# For HTTPS setup, see SSL-LETSENCRYPT.md
